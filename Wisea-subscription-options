    <script>
        // Advanced plan selection with sophisticated animations
        function selectPlan(plan) {
            const button = event.target;
            const card = button.closest('.pricing-card');
            const originalText = button.textContent;
            
            // Add loading state
            button.classList.add('loading');
            button.textContent = '';
            
            // Animate the card
            card.style.transform = 'translateY(-10px) scale(1.02)';
            card.style.boxShadow = '0 30px 60px rgba(0, 245, 255, 0.4)';
            
            // Simulate processing with realistic timing
            setTimeout(() => {
                button.classList.remove('loading');
                button.textContent = 'âœ¨ Processing...';
                button.style.background = 'linear-gradient(135deg, #39ff14, #00ff88)';
                
                setTimeout(() => {
                    alert(`ðŸš€ Welcome to WISEA ${plan.toUpperCase()}!\n\nYou'll be redirected to our secure payment portal.`);
                    
                    // Reset states
                    button.textContent = originalText;
                    button.style.background = '';
                    card.style.transform = '';
                    card.style.boxShadow = '';
                    
                    // Here you would redirect to payment
                    // window.location.href = `/checkout?plan=${plan}`;
                }, 1500);
            }, 2000);
        }

        // Enhanced contact sales function
        function contactSales() {
            // Create a more sophisticated contact experience
            const contactWindow = window.open('', '_blank', 'width=600,height=500');
            contactWindow.document.write(`
                <html>
                    <head>
                        <title>WISEA Enterprise Sales</title>
                        <style>
                            body { 
                                font-family: Inter, sans-serif; 
                                background: linear-gradient(135deg, #667eea, #764ba2);
